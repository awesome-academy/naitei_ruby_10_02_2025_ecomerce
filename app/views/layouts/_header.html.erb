<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo"), root_path(), id: "logo" %>
    <% if logged_in %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("header.home"), root_path() %></li>
          <li><%= link_to t("header.help"), help_path() %></li>
          <li><%= link_to t("cart"), help_path() %></li>
          <li> <%= link_to t("logout"), logout_path(), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </nav>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.log_in"), login_path() %></li>
      </ul>
    </nav>
  <% end %>
</div>
</header>
