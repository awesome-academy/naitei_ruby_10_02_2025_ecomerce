<% provide :title, t("log_in") %>
<h1><%= t "log_in" %></h1>
<div class="auth-container">
  <div class="auth-image">
    <%= image_tag "login_image.jpg" %>
  </div>
  <div class="auth-form">
    <%= form_for :session, url: login_path, data: { turbo: false } do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, t("login.password") %>
        <%= f.password_field :password, required: true %>
      </div>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t("login.remember_me") %>
      </div>
      <%= f.submit t("login.submit"), class: "btn-custom" %>
    <% end %>
  </div>
</div>
